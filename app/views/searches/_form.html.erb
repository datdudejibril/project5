<%= form_for(search) do |f| %>
  <% if search.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(search.errors.count, "error") %> prohibited this search from being saved:</h2>

      <ul>
      <% search.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :search_text %>
    <%= f.text_field :search_text %>
  </div>

  <div class="field">
    <%= f.label :reply_tweet %>
    <%= f.text_field :reply_tweet %>
  </div>

  <div class="actions">
  <ul>
  <li>
    <%= f.submit :create, class: 'btn btn-primary' %>
      </li>
      <li>
      <%= link_to 'Back', searches_path, class: "btn btn-default"  %>
      </li>

    </ul>
  </div>
<% end %>
